substitutions:
  friendly_name: "Device Name"
  name: device-name
  compile_limit: "4"
  max_temp: "70.0"
  icon: "mdi:radiator"
  ds18b20_adress: "0x0"
  
  ip: 192.168.x.x
  ip_com: 192.168.x.x
  gateway: !secret gateway
  subnet: !secret subnet

  board: esp01_1m
  password: !secret password
  encryption_key: !secret encryption_key  
  
  wifi_ssid: !secret wifi_ssid
  wifi_pswd: !secret wifi_password

  # Optional
  # wifi_ssid2: !secret wifi_ssid2
  # wifi_pswd2: !secret wifi_password2

#########################################

esphome:
  name: ${name}
  friendly_name: ${friendly_name}
  compile_process_limit: ${compile_limit}

esp8266:
  board: ${board}

logger:
captive_portal:

api:
  reboot_timeout: 5min
  encryption:
    key: ${encryption_key}

ota:
  password: ${password}

wifi:
  # First SSID
  networks:
  - ssid: ${wifi_ssid}
    password: ${wifi_pswd}

  # Second SSID
  # - ssid: ${wifi_ssid2}
  #   password: ${wifi_pswd2}
  
  # Manual IP
  manual_ip:
    static_ip: ${ip}
    gateway: ${gateway}
    subnet: ${subnet}
  use_address: ${ip_com}
  # AP for Fallback
  ap:
    ssid: "${friendly_name}"
    password: ${password}

# Enable Web Server
web_server:
  port: 80
  auth:
    username: ${name}
    password: ${password}

button:
  # Restart Button
  - platform: restart
    name: "Restart"

text_sensor:   
  # WiFi Info
  - platform: wifi_info
    ip_address:
      name: "IP"
      icon: "mdi:ip-network"
      disabled_by_default: true
    ssid:
      name: "SSID"
      icon: "mdi:wifi-strength-4"
      disabled_by_default: true

time:
  - platform: homeassistant
    id: homeassistant_time

sensor:
  # WiFi Signal
  - platform: wifi_signal
    name: "RSSI"
    update_interval: 120s
    filters:
      - lambda: |-
          float VALUE = -20.0;
          if (x <= VALUE) return x;
          else return {};
    
  # VCC Voltage
  - platform: adc
    pin: VCC
    name: "VCC Voltage"
    disabled_by_default: true
    

# Device Specific Config
  - platform: hlw8012
    cf_pin: GPIO05
    cf1_pin: GPIO13 # not used because it is not available on the 1PM but it is needed to compile
    sel_pin: GPIO14 # not used because it is not available on the 1PM but it is needed to compile
    power:
      name: "Power"
      unit_of_measurement: W
      id: "shelly1pm_power"
      device_class: power
      state_class: measurement
      accuracy_decimals: 0
      filters:
      # Map from sensor -> measured value
      - calibrate_linear:
          - 0.0 -> 1.0
          - 110.33186 -> 20.62
          - 131.01909 -> 24.32
          - 341.33920 -> 62.08
          - 5561.41553 -> 1000.0
          - 2975.51221 -> 535.7
          - 9612.66309 -> 1720.0
          - 14891.35352 -> 2679.0
      # Make everything below 2W appear as just 0W.
      - lambda: if (x < 2) return 0; else return x;
    update_interval: 10s

  - platform: total_daily_energy
    name: "Daily Energy"
    power_id: "shelly1pm_power"
    device_class: energy
    state_class: total_increasing
    filters:
      - multiply: 0.001
    unit_of_measurement: kWh

  - platform: ntc
    sensor: temp_resistance_reading
    name: "Analog Temperature"
    id: device_internal_temp
    unit_of_measurement: "Â°C"
    accuracy_decimals: 1
    device_class: temperature
    calibration:
      b_constant: 3350
      reference_temperature: 298.15K
      reference_resistance: 10kOhm

  - platform: resistance
    id: temp_resistance_reading
    sensor: temp_analog_reading
    configuration: DOWNSTREAM
    resistor: 3.3kOhm
    
  - platform: adc
    id: temp_analog_reading
    pin: A0
  # DS18B20 Temperature
  - platform: dallas
    address: ${ds18b20_adress}
    name: "DS18B20 Temperature"
    on_value_range:
      - above: 29
        then:
          - switch.turn_off: shelly_relay  
  
dallas:
  - pin: GPIO0

output:
  - platform: esp8266_pwm
    id: state_led
    pin:
      number: GPIO00
      inverted: true

# Button
binary_sensor:
  - platform: gpio
    pin:
      number: GPIO4
    filters:
      - delayed_on_off: 50ms
    name: "Input"
    on_press:
      then:
        - switch.toggle: shelly_relay
    disabled_by_default: true
    id: switchid

# Sonoff Relay
switch:
  - platform: gpio
    name: ""
    pin: GPIO15
    id: shelly_relay
    restore_mode: ALWAYS_OFF
    icon: "${icon}"

# Overheat Protection
interval:
  - interval: 500ms
    then:
      if:
        condition:
          and:
            - sensor.in_range:
                id: device_internal_temp
                above: ${max_temp}
            - switch.is_on: shelly_relay
        then:
          - switch.turn_off: shelly_relay
